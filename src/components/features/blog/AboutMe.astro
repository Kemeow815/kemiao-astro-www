---
import Visitor from '@/components/common/Visitor';
import IconGitHub from '~icons/tabler/brand-github';
import IconTwitter from '~icons/tabler/brand-twitter';
import IconMap from '~icons/tabler/map';
import IconRSS from '~icons/tabler/rss';
import IconUser from '~icons/tabler/user';
---

<div class="relative bg-white/40 dark:bg-zinc-900/40 backdrop-blur-md rounded-2xl overflow-hidden shadow-sm">
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-violet-100/20 via-transparent to-transparent dark:from-violet-900/10 dark:via-transparent dark:to-transparent"></div>
  <div class="relative p-5">
    <div class="flex items-center mb-5 border-b border-zinc-200/50 dark:border-zinc-700/50 pb-3">
      <IconUser class="text-lg text-zinc-400 dark:text-zinc-500 mr-2" aria-hidden="true"></IconUser>
      <h3 class="text-lg font-medium text-zinc-700 dark:text-zinc-300">关于</h3>
    </div>
    
    <div class="grid grid-cols-2 gap-3 mb-6">
      <a href="https://github.com/coderfe" title="GitHub" aria-label="GitHub" rel="noopener" target="_blank" 
         class="flex items-center gap-2 px-3 py-2.5 rounded-lg bg-zinc-100/70 dark:bg-zinc-800/50 
                hover:bg-[#24292e]/10 dark:hover:bg-[#ffffff]/10 
                transition-all duration-300 hover:-translate-y-0.5 group/link">
        <IconGitHub class="text-[#24292e] dark:text-[#ffffff] transition-colors"></IconGitHub>
        <span class="text-xs text-[#24292e] dark:text-[#ffffff]">GitHub</span>
      </a>
      <a href="https://twitter.com/coderfee" title="Twitter" aria-label="Twitter" rel="noopener" target="_blank" 
         class="flex items-center gap-2 px-3 py-2.5 rounded-lg bg-zinc-100/70 dark:bg-zinc-800/50 
                hover:bg-[#1DA1F2]/10 dark:hover:bg-[#1DA1F2]/10 
                transition-all duration-300 hover:-translate-y-0.5 group/link">
        <IconTwitter class="text-[#1DA1F2] dark:text-[#1DA1F2] transition-colors"></IconTwitter>
        <span class="text-xs text-[#1DA1F2] dark:text-[#1DA1F2]">Twitter</span>
      </a>
      <a href="/rss.xml" title="RSS" aria-label="RSS" rel="noopener" target="_blank" 
         class="flex items-center gap-2 px-3 py-2.5 rounded-lg bg-zinc-100/70 dark:bg-zinc-800/50 
                hover:bg-[#F26522]/10 dark:hover:bg-[#F26522]/10 
                transition-all duration-300 hover:-translate-y-0.5 group/link">
        <IconRSS class="text-[#F26522] dark:text-[#F26522] transition-colors"></IconRSS>
        <span class="text-xs text-[#F26522] dark:text-[#F26522]">RSS</span>
      </a>
      <a href="/sitemap-0.xml" title="站点地图" aria-label="站点地图" rel="noopener" target="_blank" 
         class="flex items-center gap-2 px-3 py-2.5 rounded-lg bg-zinc-100/70 dark:bg-zinc-800/50 
                hover:bg-[#4CAF50]/10 dark:hover:bg-[#4CAF50]/10 
                transition-all duration-300 hover:-translate-y-0.5 group/link">
        <IconMap class="text-[#4CAF50] dark:text-[#4CAF50] transition-colors"></IconMap>
        <span class="text-xs text-[#4CAF50] dark:text-[#4CAF50]">站点地图</span>
      </a>
    </div>
    
    <div>
      <div class="flex items-center justify-center mb-3">
        <span class="inline-flex items-center">
          <span class="text-xs text-zinc-600 dark:text-zinc-400">访问量</span>
        </span>
        <span class="mx-1.5 text-zinc-600 dark:text-zinc-400">·</span>
        <span class="text-xs font-medium bg-gradient-to-r from-violet-600 to-fuchsia-600 dark:from-violet-400 dark:to-fuchsia-400 bg-clip-text text-transparent">
           <Visitor title="首页" slug="/" client:load />
        </span>
      </div>
      
      <div class="flex items-center justify-center text-[10px] text-zinc-500 dark:text-zinc-500">
        <a href="https://beian.miit.gov.cn/" target="_blank" class="hover:text-violet-600 dark:hover:text-violet-400 transition-colors">
          京ICP备19050952号-1
        </a>
        <span class="mx-1.5">·</span>
        <span>© {new Date().getFullYear()}</span>
      </div>
    </div>
  </div>
</div>
