---
import { Visitors } from '@/components/common/Visitors';
import GitHubIcon from '@/components/icons/GitHubIcon.astro';
import MapIcon from '@/components/icons/MapIcon.astro';
import RSSIcon from '@/components/icons/RSSIcon.astro';
import TwitterIcon from '@/components/icons/TwitterIcon.astro';
---

<div class="relative bg-white/40 dark:bg-zinc-900/40 backdrop-blur-md rounded-2xl overflow-hidden shadow-sm">
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-violet-100/20 via-transparent to-transparent dark:from-violet-900/10 dark:via-transparent dark:to-transparent"></div>
  <div class="relative p-5">
    <!-- 标题区域 - 与标签云保持一致 -->
    <div class="flex items-center mb-5 border-b border-zinc-200/50 dark:border-zinc-700/50 pb-3">
      <span class="iconify tabler--info-circle text-lg text-zinc-400 dark:text-zinc-500 mr-2" aria-hidden="true"></span>
      <h3 class="text-lg font-medium text-zinc-700 dark:text-zinc-300">关于</h3>
    </div>
    
    <!-- 社交链接 - 更加一体化的设计 -->
    <div class="grid grid-cols-2 gap-3 mb-6">
      <a href="https://github.com/coderfe" title="GitHub" aria-label="GitHub" rel="noopener" target="_blank" class="flex items-center gap-2 px-3 py-2.5 rounded-lg bg-zinc-100/70 dark:bg-zinc-800/50 hover:bg-gradient-to-r hover:from-violet-500/20 hover:to-indigo-500/20 dark:hover:from-violet-800/30 dark:hover:to-indigo-800/30 transition-all duration-300 hover:-translate-y-0.5 group/link">
        <GitHubIcon class="text-lg text-zinc-600 dark:text-zinc-400 group-hover/link:text-violet-700 dark:group-hover/link:text-violet-300 transition-colors"></GitHubIcon>
        <span class="text-xs text-zinc-700 dark:text-zinc-300">GitHub</span>
      </a>
      <a href="https://twitter.com/coderfee" title="Twitter" aria-label="Twitter" rel="noopener" target="_blank" class="flex items-center gap-2 px-3 py-2.5 rounded-lg bg-zinc-100/70 dark:bg-zinc-800/50 hover:bg-gradient-to-r hover:from-violet-500/20 hover:to-indigo-500/20 dark:hover:from-violet-800/30 dark:hover:to-indigo-800/30 transition-all duration-300 hover:-translate-y-0.5 group/link">
        <TwitterIcon class="text-lg text-zinc-600 dark:text-zinc-400 group-hover/link:text-violet-700 dark:group-hover/link:text-violet-300 transition-colors"></TwitterIcon>
        <span class="text-xs text-zinc-700 dark:text-zinc-300">Twitter</span>
      </a>
      <a href="/rss.xml" title="RSS" aria-label="RSS" rel="noopener" target="_blank" class="flex items-center gap-2 px-3 py-2.5 rounded-lg bg-zinc-100/70 dark:bg-zinc-800/50 hover:bg-gradient-to-r hover:from-violet-500/20 hover:to-indigo-500/20 dark:hover:from-violet-800/30 dark:hover:to-indigo-800/30 transition-all duration-300 hover:-translate-y-0.5 group/link">
        <RSSIcon class="text-lg text-zinc-600 dark:text-zinc-400 group-hover/link:text-violet-700 dark:group-hover/link:text-violet-300 transition-colors"></RSSIcon>
        <span class="text-xs text-zinc-700 dark:text-zinc-300">RSS</span>
      </a>
      <a href="/sitemap-0.xml" title="站点地图" aria-label="站点地图" rel="noopener" target="_blank" class="flex items-center gap-2 px-3 py-2.5 rounded-lg bg-zinc-100/70 dark:bg-zinc-800/50 hover:bg-gradient-to-r hover:from-violet-500/20 hover:to-indigo-500/20 dark:hover:from-violet-800/30 dark:hover:to-indigo-800/30 transition-all duration-300 hover:-translate-y-0.5 group/link">
        <MapIcon class="text-lg text-zinc-600 dark:text-zinc-400 group-hover/link:text-violet-700 dark:group-hover/link:text-violet-300 transition-colors"></MapIcon>
        <span class="text-xs text-zinc-700 dark:text-zinc-300">站点地图</span>
      </a>
    </div>
    
    <!-- 页脚信息区 - 移除背景色，重新设计布局 -->
    <div>
      <!-- 访问计数 -->
      <div class="flex items-center justify-center mb-3">
        <span class="inline-flex items-center">
          <span class="text-xs text-zinc-600 dark:text-zinc-400">访问量</span>
        </span>
        <span class="mx-1.5 text-zinc-600 dark:text-zinc-400">·</span>
        <span class="text-xs font-medium bg-gradient-to-r from-violet-600 to-fuchsia-600 dark:from-violet-400 dark:to-fuchsia-400 bg-clip-text text-transparent">
          <Visitors client:load />
        </span>
      </div>
      
      <!-- 备案信息 -->
      <div class="flex items-center justify-center text-[10px] text-zinc-500 dark:text-zinc-500">
        <a href="https://beian.miit.gov.cn/" target="_blank" class="hover:text-violet-600 dark:hover:text-violet-400 transition-colors">
          京ICP备19050952号-1
        </a>
        <span class="mx-1.5">·</span>
        <span>© {new Date().getFullYear()}</span>
      </div>
    </div>
  </div>
</div>
