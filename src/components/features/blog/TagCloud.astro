---
import IconHash from '~icons/tabler/hash';

export interface TagInfo {
  tag: string;
  count: number;
}

export interface Props {
  tags: TagInfo[];
}

const { tags } = Astro.props;
---

<div class="relative bg-white/40 dark:bg-zinc-900/40 backdrop-blur-md rounded-2xl overflow-hidden shadow-sm">
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-violet-100/20 via-transparent to-transparent dark:from-violet-900/10 dark:via-transparent dark:to-transparent"></div>
  <div class="relative p-5">
    <div class="flex items-center mb-5 border-b border-zinc-200/50 dark:border-zinc-700/50 pb-3">
      <IconHash class="text-lg text-zinc-400 dark:text-zinc-500 mr-2" aria-hidden="true"></IconHash>
      <h3 class="text-lg font-medium text-zinc-700 dark:text-zinc-300">标签</h3>
    </div>
    
    <div class="flex flex-wrap gap-2 py-1">
      {tags.map(({ tag, count }) => (
        <a 
          href={`/blog/tags/${tag}`}
          class="relative transition-all duration-300 ease-in-out rounded-lg px-3 py-1.5 text-xs bg-zinc-100/70 dark:bg-zinc-800/50 text-zinc-600 dark:text-zinc-400 overflow-hidden hover:bg-gradient-to-r hover:from-violet-500/20 hover:via-fuchsia-500/20 hover:to-indigo-500/20 dark:hover:from-violet-800/30 dark:hover:via-fuchsia-800/30 dark:hover:to-indigo-800/30 hover:text-violet-700 dark:hover:text-violet-300 group"
        >
          <span class="relative z-10 group-hover:animate-pulse">{tag} · {count}</span>
          <span class="absolute inset-0 bg-transparent group-hover:bg-gradient-to-r from-violet-300/10 to-indigo-300/10 dark:from-violet-700/10 dark:to-indigo-700/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 group-hover:rotate-3 group-hover:scale-105"></span>
          <span class="absolute -inset-1 blur-sm bg-gradient-to-r from-violet-400/0 via-fuchsia-400/0 to-indigo-400/0 dark:from-violet-600/0 dark:via-fuchsia-600/0 dark:to-indigo-600/0 group-hover:from-violet-400/30 group-hover:via-fuchsia-400/30 group-hover:to-indigo-400/30 dark:group-hover:from-violet-600/20 dark:group-hover:via-fuchsia-600/20 dark:group-hover:to-indigo-600/20 opacity-0 group-hover:opacity-100 transition-all duration-500 -z-10"></span>
        </a>
      ))}
    </div>
  </div>
</div>
